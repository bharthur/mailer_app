<div class="jumbotron">
  <%= form_for @email, as: :email, url: '/' do |f| %>
    <div class="form-group<%= @email.errors.any? ? ' has-danger' : ''%>">
      <label class="form-control-label" for="email_to">To </label>
      <%= f.text_field :to, class: "form-control form-control-danger", placeholder: "Enter email", type: "email"%>
      <div class="form-control-feedback"><%= check_for_error(:to) %></div>
    </div>
    <div class="form-group<%= @email.errors.any? ? ' has-danger' : ''%>">
      <label class="form-control-label" for="email_subject">Subject</label>
      <%= f.text_field :subject, class: "form-control form-control-danger", placeholder: "Enter subject of the email" %>
      <div class="form-control-feedback"><%= check_for_error(:subject) %></div>
    </div>
    <div class="form-group<%= @email.errors.any? ? ' has-danger' : ''%>">
      <label class="form-control-label" for="email_body">Body</label>
      <%= f.text_area :body, class: "form-control form-control-danger", rows: "15" %>
      <div class="form-control-feedback"><%= check_for_error(:body) %></div>
    </div>
    <%= f.submit "Send Email", class: "btn btn-primary" %>
  <% end %>
</div>